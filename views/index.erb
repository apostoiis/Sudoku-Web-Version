<html>
  <head>
    <title>Sudoku Game</title>
    <!-- link to the CSS stylesheet -->
    <link rel="stylesheet" href="/stylesheets/application.css" type="text/css">
  </head>
  <body>
    <h1>There's always time for another game of Sudoku!</h1>
    <div id="flash">
      <%= flash[:notice] %>
    </div>
    <div id="container">
      <img class="sudoku-img" src="sudoku-title.png" alt="">
      <div id="sudoku">
        <div class="forms-container">
            <form class="first-form" action="/" method="post">
              <!-- one div for each row -->
              <% 3.times do |row| %>
              <!-- we want to create separate div elements for boxes to style them using CSS -->
              <div class="row">
                <% 3.times do |box| %>
                <div class="box">
                  <!-- each box will have nine cells -->
                  <% 3.times do |cell_row| %>
                  <div class="cell-row">
                    <% 3.times do |cell| %>
                    <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                    <% end %>
                  </div>
                  <% end %>
                </div>
                <% end %>
              </div>
              <% end %>
              <button><img class="check" src="check-btn.png" alt=""></button>
            </form>
          <form action="/solution" method="get">
            <button><img class="answer" src="answer-btn.png" alt=""></button>
          </form>
          <form action="/reset" method="post">
            <button><img class="reset" src="reset-btn.png" alt=""></button>
          </form>
          <form action="http://en.wikipedia.org/wiki/Sudoku">
            <button><img src="help-btn.png" alt=""></button>
          </form>
            <form action="/change_difficulty" method="get">
              <button name="level" value="5" type="submit"><img class="easy" src="easy-btn.png" alt=""></button>
              <button name="level" value="3" type="submit"><img class="medium" src="medium-btn.png" alt=""></button>
              <button name="level" value="2" type="submit"><img class="hard" src="hard-btn.png" alt=""></button>
            </form>
          </form>
        </div>
    </div>
  </div>
</body>
</html>